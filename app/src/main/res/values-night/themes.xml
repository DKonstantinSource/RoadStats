<resources >
    <!-- Base application theme. -->
    <style name="Theme.RoadStats" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/shale</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>

        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>

    </style>
</resources>